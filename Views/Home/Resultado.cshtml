@model IEnumerable<Resposta>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css" />
</head>
<body>
     <div> 
        <h2>Partial results </h2>
        <h4>Would you take a one-way trip to Mars?</h4>

        @foreach(Resposta r in Model)
            {
                <p> @(r.Name): @(r.Yes.Value ? "Yes" : "No")</p>
            }
        
        <p>
            <a class="btn btn-info" asp-action="Responder">Answer</a>
        </p>
    </div>
</body>
</html>