@model MeuPrimeiroProjeto.Models.Resposta
<html>
<head>
    <meta charset="utf-8" />
    <title> Enquete Web: Resposta</title>
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css"
</head>
<body>
    <h1>EnqueteWeb</h1>
    <form method="POST">
        <div asp-validation-summary="All">
            <label asp-for="Nome"> Seu nome:</label>
            <input asp-for="Nome">
        </div>
        <div>
            <label asp-for="Email"> Seu e-mail:</label>
            <input asp-for="Email">
        </div>
        <div>
            Resposta:
            <div>
                <input type="radio" id="rdSim" asp-for="Sim" value="true" />
                <label for="rdSim">Sim</label>
            </div>
            <div>
                <input type="radio" id="rdNao" asp-for="Sim" value="false" />
                <label for="rdNao">Não</label>
            </div>
            <input type="submit" value="Enviar Resposta" />
        </div>
    </form>
</body>
</html>